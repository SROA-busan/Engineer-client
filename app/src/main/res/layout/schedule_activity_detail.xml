<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="scheduleData"
                type="com.example.engineer.dto.EngineerDetailSchedule"/>
    </data>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="@{scheduleData.productName}"
                    android:hint="냉장고"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_product"
                    android:layout_marginTop="@dimen/pageMarginAndOffset"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:textSize="25sp"
                    android:textColor="#000000"/>

            <TextView
                    android:text="@{scheduleData.content}"
                    android:hint="제품 상세내용"
                    android:layout_width="@dimen/layout_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:lines="5"
                    android:gravity="top|left"
                    android:scrollHorizontally="false"
                    android:minWidth="10dip"
                    android:maxWidth="5dip"
                    android:id="@+id/detail_content"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/detail_reservation_date"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp" android:textSize="18sp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/detail_complete_date"
                        app:layout_constraintTop_toBottomOf="@+id/detail_reservation_date"
                        android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="@+id/detail_reservation_date"
                        android:textSize="18sp"/>
                <TextView
                        android:text="@{scheduleData.startTime}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/detail_startDate"
                        app:layout_constraintStart_toEndOf="@+id/detail_reservation_date" android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="@+id/detail_reservation_date"/>
                <TextView
                        android:text="@{scheduleData.endTime}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/detail_endDate"
                        app:layout_constraintStart_toEndOf="@+id/detail_complete_date" android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="@+id/detail_complete_date"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                    android:text="전화"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/search_detail_button_call"
                    android:textColor="#000000"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:layout_marginTop="@dimen/pageMargin"
                    android:background="@drawable/button_shape"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="45dp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/baseline_call_24"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#94000000"
                    android:layout_marginTop="@dimen/pageMarginAndOffset"/>

            <TextView
                    android:text="고객주소"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scheudule_detail_userAddress"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:layout_marginTop="@dimen/pageMarginAndOffset"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            <TextView
                    android:text="@{scheduleData.customerAddress}"
                    android:hint="주소"
                    android:layout_width="@dimen/layout_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:lines="2"
                    android:gravity="top|left"
                    android:id="@+id/detail_userAddress_info"/>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#94000000"
                    android:layout_marginTop="@dimen/pageMarginAndOffset" android:id="@+id/view2"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="@dimen/pageMargin">


                <Button
                        android:text="입고"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/detail_warehousing_button"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
                        android:layout_marginStart="32dp" android:textColor="#000000"/>
                <Button
                        android:text="처리완료"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/detail_repair_complete_button"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginRight="32dp" android:layout_marginEnd="32dp"
                        android:textColor="@color/black"/>
                <Button
                        android:text="입고수리완료"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/detail_warehousing_repair_button"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="2dp" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:textColor="#000000"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</layout>
