<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="evaluationData"
                type="com.example.engineer.dto.ResponseEngineerEvaluation"/>
    </data>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/confirm_tool_bar3"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/skyblue"
                    app:title="고객 상세 평가"
                    app:titleTextColor="@color/blueblack"
            >
            </androidx.appcompat.widget.Toolbar>
            <TextView
                    android:text="@{evaluationData.classifyName}"
                    android:hint="냉장고"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_product"
                    android:layout_marginTop="@dimen/pageMarginAndOffset"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:textSize="25sp"
                    android:textColor="#000000"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:background="@drawable/baseline_star_24"
                        android:backgroundTint="@color/yellow"
                        android:id="@+id/imageView2"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
                <TextView
                        android:hint="별별별별별"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detail_score"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                        app:layout_constraintTop_toTopOf="@+id/imageView2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                    android:text="@{evaluationData.content}"
                    android:hint="제품 상세내용"
                    android:layout_width="@dimen/layout_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:lines="5"
                    android:gravity="top|left"
                    android:scrollHorizontally="false"
                    android:minWidth="10dip"
                    android:maxWidth="5dip"
                    android:id="@+id/detail_content"/>

            <TextView
                    android:text="@{evaluationData.writeDate}"
                    android:hint="문의일시 : 2021년 10월 12일 오전 10:30 ~ 11:30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:layout_marginTop="@dimen/pageMargin"
                    android:textSize="18sp"
                    android:id="@+id/detail_writeDate"/>



            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="@dimen/pageMargin">

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</layout>
