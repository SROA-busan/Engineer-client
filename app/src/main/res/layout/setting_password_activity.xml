<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".sign.SettingPasswordActivity">

    <TextView
            android:text="비밀번호"
            android:layout_width="@dimen/title_width"
            android:layout_height="wrap_content"
            android:id="@+id/engineer_password"
            android:textSize="@dimen/font_size"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/login_side_margin"
            android:layout_marginStart="@dimen/login_side_margin"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/sign_up_top_margin"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_engineer_password"
            app:layout_constraintStart_toEndOf="@+id/engineer_password"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/sign_up_top_margin" android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"/>
    <TextView
            android:text="비밀헌호 확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/engineer_password_confirm"
            android:textSize="@dimen/font_size"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/login_side_margin"
            android:layout_marginStart="@dimen/login_side_margin"
            android:layout_marginTop="@dimen/sign_up_top_margin"
            app:layout_constraintTop_toBottomOf="@+id/engineer_password"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_engineer_password_confirm"
            app:layout_constraintStart_toEndOf="@+id/engineer_password_confirm"
            android:layout_marginTop="@dimen/sign_up_top_margin"
            app:layout_constraintTop_toBottomOf="@+id/engineer_password"/>

    <Button
            android:text="확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setting_password_confirm_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_engineer_password_confirm" android:layout_marginTop="32dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>