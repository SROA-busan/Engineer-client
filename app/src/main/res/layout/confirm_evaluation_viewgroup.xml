<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/reserve_info_box"
        android:layout_height="120dp">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@drawable/baseline_star_24"
            android:backgroundTint="@color/yellow"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/evaluation_score" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="2021.11.02 10:00 - 11:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/evaluation_writeDate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/pageMargin"
            android:layout_marginStart="@dimen/pageMargin"
            android:layout_marginTop="@dimen/pageMarginHalf"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/evaluation_classifyName"
            app:layout_constraintTop_toBottomOf="@+id/evaluation_writeDate"
            app:layout_constraintStart_toStartOf="@+id/evaluation_writeDate"/>
    <TextView
            android:text="친절해요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/evaluation_content"
            app:layout_constraintStart_toStartOf="@+id/evaluation_classifyName"
            app:layout_constraintTop_toBottomOf="@+id/evaluation_classifyName"/>
    <TextView
            android:text="4.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/evaluation_score"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>